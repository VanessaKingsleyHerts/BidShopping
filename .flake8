# .flake8

[flake8]

# Maximum allowed line length
max-line-length = 100

# Error codes to ignore
ignore =
    E231,
    E265,
    W391,
    E302,
    W292,
    E303,
    E501,
    F811,
    F405,
    E722,
    F841

# Paths to exclude from linting
exclude =
    venv/,
    migrations/,
    .gitlab-ci.yml,
    __pycache__/,
    static/
